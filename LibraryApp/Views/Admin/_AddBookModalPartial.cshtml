@model LibraryApp.Models.Book

<div class="modal fade add-book-modal" tabindex="-1" role="dialog" aria-labelledby="AddBookModal" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Добавить книгу</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                @using (Html.BeginForm("CreateBook", "Admin", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true)
                    <div class="form-group row">
                        @Html.LabelFor(m => m.Author, new { @class = "col-sm-2 col-form-label" })
                        <div class="col-sm-10">
                            @Html.TextBoxFor(m => m.Author, new { @class = "form-control", required="true" })
                            @Html.ValidationMessageFor(m => m.Author)
                        </div>
                    </div>
                    <div class="form-group row">
                        @Html.LabelFor(m => m.Name, new { @class = "col-sm-2 col-form-label" })
                        <div class="col-sm-10">
                            @Html.TextBoxFor(m => m.Name, new { @class = "form-control", required="true" })
                            @Html.ValidationMessageFor(m => m.Name)
                        </div>
                    </div>
                    <div class="form-group row">
                        @Html.LabelFor(m => m.PublishingHouse, new { @class = "col-sm-2 col-form-label" })
                        <div class="col-sm-10">
                            @Html.TextBoxFor(m => m.PublishingHouse, new { @class = "form-control", required="true" })
                            @Html.ValidationMessageFor(m => m.PublishingHouse)
                        </div>
                    </div>
                    <div class="form-group row">
                        @Html.LabelFor(m => m.Year, new { @class = "col-sm-2 col-form-label" })
                        <div class="col-sm-10">
                            @Html.TextBoxFor(m => m.Year, new { @class = "form-control", required="true" })
                            @Html.ValidationMessageFor(m => m.Year)
                        </div>
                    </div>
                    <div class="form-group row">
                        @Html.LabelFor(m => m.Description, new { @class = "col-sm-2 col-form-label" })
                        <div class="col-sm-10">
                            @Html.TextAreaFor(m => m.Description, new { @class = "form-control", required="true" })
                            @Html.ValidationMessageFor(m => m.Description)
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Закрыть</button>
                        <button type="submit" class="btn btn-primary">Добавить</button>
                    </div>
                }
            </div>
        </div>
    </div>
</div>